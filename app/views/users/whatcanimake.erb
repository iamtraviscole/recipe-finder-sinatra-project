<div class="container-fluid">

  <div class="row">
    <div class="col-md-4">
      <h1 class="grey-bg">You Can Make</h1>
      <% if !@you_can_make.empty? %>
      <ul class="no-style">
        <% @you_can_make.each do |recipe_id, recipe| %>
          <h3><li><a href="/recipes/<%=recipe.id%>"><%= recipe.name %></a></li></h3>
          <hr>
        <% end %>
      <% else %>
        <p> You don't have enough ingredients to make anything! </p>
        <a class="btn btn-default btn-sm" href="/ingredients/new" role="button"><span class="glyphicon glyphicon-plus"></span> Add More Ingredients</a>
      <% end %>
    </div>

    <div class="col-md-4">
      <h1 class="grey-bg">You Can Almost Make</h1>
      <% if !@you_can_almost_make.empty? %>
        <ul class="no-style">
          <% @you_can_almost_make.each do |recipe_id, ingredient_ids| %>
            <h3><li><a href="/recipes/<%=Recipe.find_by(id: recipe_id).id%>"><%= Recipe.find_by(id: recipe_id).name %></a></li></h3>
            <h4>You just need:</h4>
            <% ingredient_ids.each do |id| %>
              <li><%= Ingredient.find_by(id: id).name %></li>
            <% end %>
            <hr>
          <% end %>
        </ul>

      <% else %>
        <p> You don't have enough ingredients to make anything! </p>
        <a class="btn btn-default btn-sm" href="/ingredients/new" role="button"><span class="glyphicon glyphicon-plus"></span> Add More Ingredients</a>
      <% end %>
    </div>
  </div>

</div>
