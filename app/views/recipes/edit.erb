<div class="container-fluid">

  <div class="row">
    <div class="col-md-12">
      <h1 class="grey-bg">Edit <%=@recipe.name%></h1>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">
      <form action="/recipes/<%=@recipe.id%>" method="post">
      <input type="hidden" name="_method" value="patch">
        <h3><label for="recipe_name">Name</label></h3>
        <div class="form-group">
          <input type="text" name="recipe[name]" id="recipe_name" value="<%=@recipe.name%>" class="form-control">
        </div>
        <h3><label for="recipe_difficulty">Difficulty</label></h3>
        <div class="form-group">
          <input type="text" name="recipe[difficulty]" id="recipe_difficulty" value="<%=@recipe.difficulty%>" class="form-control">
        </div>
        <h3><label for="recipe_cook_time">Cook Time (in minutes)</label></h3>
        <div class="form-group">
          <input type="number" name="recipe[cook_time]" id="recipe_cook_time" value="<%=@recipe.cook_time%>" class="form-control">
        </div>
        <h3><label for="recipe_ingredients">Ingredients</label></h3>
        <ul class="no-style">
        <% @ingredients.each do |ingredient| %>
          <div class="checkbox">
            <% if @recipe_ingredients.include?(ingredient) %>
              <label><li class="bigger-list"><input type="checkbox" name="ingredients[]" id="recipe_ingredients" value="<%=ingredient.name%>" checked><%= ingredient.name %></li></label>
            <% else %>
              <label><li class="bigger-list"><input type="checkbox" name="ingredients[]" id="recipe_ingredients" value="<%=ingredient.name%>"><%= ingredient.name %></li></label>
            <% end %>
          </div>
        <% end %>
        </ul>

        <h3><label for="recipe_create_ingredients">And/or, create ingredients</label></h3>
        <div class="form-group">
            <input type="text" name="ingredients[]" class="form-control" placeholder="Ingredient name">
        </div>
        <div class="form-group">
          <input type="text" name="ingredients[]" class="form-control">
        </div>
        <div class="form-group">
          <input type="text" name="ingredients[]" class="form-control">
        </div>
        <div class="form-group">
          <input type="text" name="ingredients[]" class="form-control">
        </div>
        <div class="form-group">
          <input type="text" name="ingredients[]" class="form-control">
        </div>
        <div class="form-group">
          <input type="text" name="ingredients[]" class="form-control">
        </div>

        <h3><label for="recipe_instructions">Instructions</label></h3>
        <div class="form-group">
          <textarea rows="10" name="recipe[instructions]" id="recipe_instructions" class="form-control"><%=@recipe.instructions%></textarea>
        </div>

        <input type="submit" class="btn btn-default" value="Edit Recipe">
        <br>
        <br>
        <hr>
        <a class="btn btn-danger btn-xs pull-right" href="/recipes/<%=@recipe.id%>/delete">Delete Recipe</a>
      </form>
    </div>
  </div>

</div>
