<div class="container-fluid">

  <div class="row">
    <div class="col-md-12">
      <h1 class="grey-bg"><%= @recipe.name %></h1>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">
      <h2>Difficulty</h2>
      <p><%= @recipe.difficulty %></p>
      <hr>
      <h2>Cook Time</h2>
      <p><%= @recipe.cook_time %> mins</p>
      <hr>
      <h2>Ingredients</h2>
      <ul>
      <% @recipe.ingredients.each do |ingredient| %>
        <li><%= ingredient.name %></li>
      <% end %>
      </ul>
      <hr>
      <h2>Instructions</h2>
      <p><%= format_text(@recipe.instructions) %></p>
      <hr>
      <% if current_user.recipes.ids.include?(@recipe.id) %>
        <input type="submit" class="btn btn-default" value="Edit Recipe">
      <% end %>
    </div>
  </div>

</div>
