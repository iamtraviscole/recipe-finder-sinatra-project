<h1>New Recipe</h1>

<form action="/recipes" method="post">
  <label for="recipe_name"></label>
  <input type="text" name="name" id="recipe_name">
  <label for="recipe_difficulty"></label>
  <input type="text" name="difficulty" id="recipe_difficulty">
  <label for="recipe_instructions"></label>
  <input type="text" name="instructions" id="recipe_instructions">
  <label for="recipe_cook_time"></label>
  <input type="number" name="cook_time" id="recipe_cook_time">
  <br>
  <input type="submit" value="Create New Recipe">
</form>
